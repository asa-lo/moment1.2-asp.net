<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body class="bg-light">
    <header>
        <div>
            <a class="d-block" asp-page="/Index"><img src="~/images/logotyp.png" alt="Logo"
                    class="d-block mx-auto" /></a>
        </div>
        <div class="text-center my-md-3 text-dark">
            Dagens datum är: @DateTime.Now.ToString("yyyy-MM-dd")
        </div>
    </header>
    <div class="bg-white pb-5">
        <div class="container pt-2 pt-md-4">
            <aside>
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light mt-3 mt-md-0">

                    <button class="navbar-toggler mx-auto" type="button" data-toggle="collapse"
                        data-target=".navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1 flex-column">
                            <li class="nav-item bg-primary my-1 rounded-0">
                                <a class="nav-link text-white px-2 px-md-5 text-center" asp-area=""
                                    asp-page="/Index">Start</a>
                            </li>
                            <li class="nav-item bg-primary my-1 rounded-0">
                                <a class="nav-link text-white px-2 px-md-5 text-center" asp-area=""
                                    asp-page="/Razor">Razor</a>
                            </li>
                            <li class="nav-item bg-primary my-1 rounded-0">
                                <a class="nav-link text-white px-2 px-md-5 text-center" asp-area="" asp-page="/About">Om
                                    sidan</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </aside>
            <main class="mt-3 mt-md-0">
                @RenderBody()
            </main>
        </div>
    </div>
    <footer class="pt-3">
        <div class="container text-dark">
            <p class="text-center w-100">Åsa Lodesjö MIUN 2021 <a
                    href="mailto:aslo1900@student.miun.se">aslo1900@student.miun.se</a></p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>